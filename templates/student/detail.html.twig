{% extends "base.html.twig" %}
{% block body %}
	<div class="container col-md-6 mt-3">
		<div class="row">
			<div class="col " >
				<img src="{{student.image}}" width="300" height="400">
			</div>
			<div class="col text-center">
				<h1 class="text text-success">Student name:
					{{student.name}}</h1>
				<h1>Address:
					{{student.address}}</h1>
				<h2>Phone:
					{{student.phone}}</h2>
				<h2>Email:
					{{student.email}}</h2>
				<h2>Date of birth:
					{{student.birth|date('d-m-Y')}}</h2>
			</div>
		</div>
	</div>
{% endblock %}
