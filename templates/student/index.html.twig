{% extends "base.html.twig" %}
{% block body %}
<div class="container col-md-6 mt-5 text-center">
<div class="container col-md-4">{% for flash in app.flashes('Success') %}
  <p class="alert alert-secondary">{{flash}}</p>  
{% endfor %}
</div>
<h1 class="text text-primary">Student list</h1>
 <a href="{{path('student_add')}}" class=" btn btn-primary">Add new student</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Student ID</th>
            <th>
            <a class="text-decoration-none" href="{{path('sort_name_asc')}}">
            <img src="{{asset('images/up.jpg')}}" width="20" height="20">
            </a>
            Student Name 
            <a class="text-decoration-none" href="{{path('sort_name_desc')}}">
            <img src="{{asset('images/down.jpg')}}" width="20" height="20">
            </a>
            </th>
            <th>Student Address</th>
            <th>Date of birth</th>
            <th>Image</th>
            <th>Menu</th>
        </tr>
    </thead>
    <tbody>
    {% for student in students %}
         <tr>
            <td>{{student.id}}</td>
            <td>{{student.name}}</td>
            <td>{{student.address}}</td>
            <td>{{student.birth|date('d-m-Y')}}</td>
            <td>
            <a href="{{path('student_detail',{'id':student.id})}}">
            <img src="{{student.image}}" width="100" height="100">
            </a>
            </td>
            <td>
            <a href="{{path('student_edit',{'id':student.id})}}" class="btn btn-warning">Edit</a>
            <a href="{{path('student_delete',{'id':student.id})}}" class="btn btn-danger"
            onclick="return confirm('Are your sure to delete this?');"
            >Delete</a>
            </td>
        </tr>
    {% endfor %}   
    </tbody>
</table>
{% endblock %}